
@{
    ViewBag.Title = "Ver";
}

<div class="container">
    <div class="panel panel-inverse">
        <div class="form-group">
            <label class="control-label col-md-1">Banco</label>
            <div class="col-md-3">
                <select name="selecIdBanco" id="selecIdBanco" class="form-control selectpicker" data-size="10" data-live-search="true" data-style="btn-danger" onchange="paginaAjax('body-data-table', {id: this.value}, '@Url.Action("ListarNegociosPorBancoConAjax", "Negocio")', 'POST', null, null, false, true);">
                    @foreach (var item in ViewBag.listaTNegocio)
                    {
                        if (@item.estatus == true)
                        {
                            <option value="@item.idBanco">@item.nombre</option>
                        }

                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- begin col-10 -->
            <div class="col-md-12">
                <!-- begin panel -->
                <div class="panel panel-inverse">
                    <div class="panel-body">
                        <table id="data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Banco</th>
                                    <th>Negocio</th>
                                    <th>Fecha Registro</th>
                                    <th>Fecha Modificación</th>
                                    <th>Estatus</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody id="body-data-table">
                                @foreach (var item in ViewBag.listaTNegocio)
                                {
                                    <tr>
                                        <td>@item.parentBanco.nombre</td>
                                        <td>@item.nombre</td>
                                        <td>@item.fechaRegistro</td>
                                        <td>@item.fechaModificacion</td>
                                        <td>@(item.estatus ? "Activo" : "Inactivo")</td>
                                        <td>
                                            <input type="button" value="Modificar" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- end panel -->
            </div>
            <!-- end col-10 -->
        </div>

</div>

<script>
    function negocioModificar(idNegocio) {
        window.location.href = '@Url.Action("Modificar", "Negocio")' + '/' + idNegocio;
        }

</script>


