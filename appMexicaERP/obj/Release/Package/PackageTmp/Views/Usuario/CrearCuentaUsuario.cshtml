
@{
    ViewBag.Title = "CrearCuentaUsuario";
}

<div class="container">
    <div class="row">
        <!-- begin col-6 -->
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse" data-sortable-id="form-stuff-1">
                <div class="panel-heading">
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                    <h4 class="panel-title">Registro de Usuarios al sistema</h4>
                </div>
                <div class="panel-body">
                    <form action="@Url.Action("CrearCuentaUsuario", "Usuario")" class="form-horizontal" method="post">
                        <div class="form-group">
                                <label class="control-label col-md-2">Correo Electronico</label>
                                <div class="col-md-3">
                                    <input type="text" id="txtCorreoElectronico" name="txtCorreoElectronico" class="form-control" />
                                </div>
                            <label class="col-md-1 control-label">Rol</label>
                            <div class="col-md-2">
                                <select name="selectRol" id="selectRol" class="form-control selectpicker" data-size="10" data-live-search="true" data-style="btn-success">
                                    <option value="1">Normal</option>
                                    <option value="2">Administrador</option>

                                </select>
                            </div>
                            <label class="col-md-1 control-label">Estatus</label>
                            <div class="col-md-2">
                                <select name="selectEstatus" id="selectEstatus" class="form-control selectpicker" data-size="10" data-live-search="true" data-style="btn-warning">
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>

                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12" style="text-align:right;">
                                <button type="button" class="btn btn-sm btn-danger m-r-5" onclick="CrearCuentaUsuario();">Registrar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- end panel -->
        </div>
    </div>
</div>

<script>
    function CrearCuentaUsuario()
    {
        paginaAjax('add-with-callbacks',
            {
                txtCorreoElectronico: document.getElementById('txtCorreoElectronico').value,
                selectRol: document.getElementById('selectRol').value,
                selectEstatus: document.getElementById('selectEstatus').value
            },

            '@Url.Action("CrearCuentaUsuario", "Usuario")', 'POST', null, null, false, true);
    }

</script>

