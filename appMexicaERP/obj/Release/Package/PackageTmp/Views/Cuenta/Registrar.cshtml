
@{
    ViewBag.Title = "Registrar";
}

<div class="container">
<div class="row">
    <!-- begin col-6 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse" data-sortable-id="form-stuff-1">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">Registro de cuenta Bancaria</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Registrar", "Cuenta")" class="form-horizontal" method="post">
                    <div class="form-group">
                        <label class="col-md-1 control-label">Negocio</label>
                        <div class="col-md-4">
                            <select name="selectIdnegocio" id="selectIdnegocio" class="form-control selectpicker" data-size="10" data-live-search="true" data-style="btn-success">
                                @foreach (var item in ViewBag.listasNegocios)
                                {
                                    <option value="@item.idNegocio">@item.nombre</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">Referencia</label>
                            <div class="col-md-4">
                                <div class="row row-space-10">
                                    <input type="text" id="txtReferencia" name="txtReferencia" class="form-control" />
                                </div>
                            </div>
                        </div>
                        </div>
                    <div class="form-group">
                            <label class="col-md-1 control-label">No. Cuenta</label>
                            <div class="col-md-4">
                                <input type="text" id="txtNumeroCuenta" name="txtNumeroCuenta" class="form-control" />
                            </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">Saldo Inicial</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-addon">$</span>
                                    <input type="text" id="txtSaldoInicial" name="txtSaldoInicial" class="form-control" />
                                    <span class="input-group-addon">.00</span>
                                </div>
                            </div>
                          </div>
                        </div>
                    <div class="form-group">
                        <label class="col-md-1 control-label">Obsservacion</label>
                        <div class="col-md-4">
                            <textarea class="form-control" id="txtObservacion" name="txtObservacion" rows="5"></textarea>
                        </div>
                            <label class="control-label col-md-1">Estatus</label>
                            <div class="col-md-2">
                                <select name="selectEstatus" id="selectEstatus" class="form-control selectpicker" data-size="10" data-live-search="true" data-style="btn-warning">
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                </select>
                            </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-9" style="text-align:right;">
                            <button type="submit" class="btn btn-sm btn-danger">Agregar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- end panel -->
    </div>
</div>
</div>