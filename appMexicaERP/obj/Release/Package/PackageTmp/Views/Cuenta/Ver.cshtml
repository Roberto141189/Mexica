
@{
    ViewBag.Title = "Ver";
}

<div class="row">
    <!-- begin col-10 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <!-- begin panel -->
        <div class="panel panel-inverse" data-sortable-id="table-basic-1">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">Listas de cuentas bancarias</h4>
            </div>
                <div class="panel-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Referencia</th>
                                <th>No. Cuenta</th>
                                <th align="center">Saldo Inicial</th>
                                <th align="center">Saldo Total</th>
                                <th>Observaciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.listasCuentas)
                            {
                                <tr>
                                    <td>@item.referencia</td>
                                    <td>@item.numeroCuenta</td>
                                    <td align="right">@String.Format("{0,14:c}", item.saldoInicial)</td>
                                    <td align="right">@String.Format("{0,14:c}", item.saldoTotal)</td>
                                    <td>@item.observacion</td>
                                    <td><input type="button" class="btn btn-sm btn-success" value="Modificar" onclick="CuentaModificar('@item.idCuenta');" /> | <input type="button" class="btn btn-sm btn-danger" value="Eliminar" onclick="CuentaEliminarr('@item.idCuenta');" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        <!-- end panel -->
        <!-- end panel -->
    </div>
    <!-- end col-10 -->
</div>

<!-- #modal-dialog -->
<div class="modal fade" id="modal-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Formulario de modificar</h4>
            </div>
            <div class="modal-body">
                <input type="text" id="txtNombreBanco" name="txtNombreBanco" class="form-control" value="idBanco" />
            </div>
            <div class="modal-footer">
                <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Cancelar</a>
                <a href="javascript:;" class="btn btn-sm btn-success">Actualizar</a>
            </div>
        </div>
    </div>
</div>
<!-- #modal-without-animation -->

<script>
    function CuentaModificar(idCuenta) {
        window.location.href = '@Url.Action("Modificar", "Cuenta")' + '/' + idCuenta;
        }

</script>


